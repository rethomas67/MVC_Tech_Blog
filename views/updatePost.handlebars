<div class="card">
  <h3 class="card_header">Edit Post</h3>
  <form class="card_body edit_post_form" data-id="{{id}}" id="edit_post_form">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      id="title"
      name="post_title"
      value="{{title}}"
      class="form-input"
    />

    <label class="form-label" for="content">Content</label>
    <textarea
      id="content"
      rows="5"
      name="content"
      class="form-input"
    >{{content}}</textarea>

    <button type="submit" class="btn btn_update_post">Update Post</button>
    <button type="submit" class="btn btn_delete_post">Delete Post</button>
  </form>
</div>

<script src="/js/updatePost.js"></script>