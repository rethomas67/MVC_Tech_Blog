{{#each posts as |post|}}
  <div class="card">
    <div class="card_header">
      <a href="/userPost/{{post.id}}"><h3>{{post.title}}</h3></a>
      <p>Posted by {{post.user.name}} on {{format_date post.post_date}}</p>
    </div>
    <div class="card_body">
      {{post.content}}
    </div>
  </div>
{{/each}}