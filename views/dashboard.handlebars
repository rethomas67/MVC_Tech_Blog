{{#each posts as |post|}}
  <div class="card">
    <div class="card_header">
      <h3>{{post.title}}</h3>
      <p>Posted by {{post.user.name}} on {{format_date post.post_date}}</p>
    </div>
    <div class="card_body">
      {{post.content}}
    </div>
  </div>
{{/each}}

<div class="new_post">
  <button type="submit" class="btn btn_new">+ New Post</button>
</div>

<script src="/js/dashboard.js"></script>